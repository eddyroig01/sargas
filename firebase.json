{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/health",
        "function": "healthCheck"
      },
      {
        "source": "/api/test-analytics", 
        "function": "testAnalytics"
      },
      {
        "source": "/api/analytics-data",
        "function": "getAnalyticsData"
      },
      {
        "source": "/api/visitor-trends",
        "function": "getVisitorTrends"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ]
}